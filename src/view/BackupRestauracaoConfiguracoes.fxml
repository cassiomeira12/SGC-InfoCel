<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane id="AnchorPane" prefHeight="450.0" prefWidth="1200.0" stylesheets="@../css/default.css" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.BackupRestauracaoConfiguracoesController">
   <children>
      <VBox layoutX="765.0" layoutY="23.0" spacing="5.0">
         <children>
            <CheckBox fx:id="backupAutomaticoCheckBox" mnemonicParsing="false" text="Backup Automático" />
            <HBox alignment="CENTER" spacing="5.0">
               <children>
                  <Label text="Realizar Backup automático a cada" />
                  <Spinner fx:id="diasSpinner" prefHeight="28.0" prefWidth="75.0" />
                  <Label text="dia(s)" />
               </children>
            </HBox>
         </children>
      </VBox>
      <Button layoutX="245.0" layoutY="130.0" mnemonicParsing="false" text="Realizar Backup" />
      <Button layoutX="43.0" layoutY="130.0" mnemonicParsing="false" text="Importar Backup" />
      <VBox layoutX="43.0" layoutY="45.0" spacing="5.0">
         <children>
            <Label text="Caminho padrão do Backup" />
            <HBox alignment="CENTER" prefWidth="600.0" spacing="5.0">
               <children>
                  <TextField fx:id="caminhoBackupText" maxWidth="1.7976931348623157E308" HBox.hgrow="ALWAYS" />
                  <Button mnemonicParsing="false" text="Alterar" />
               </children>
            </HBox>
         </children>
      </VBox>
      <VBox layoutX="765.0" layoutY="96.0" spacing="5.0">
         <children>
            <HBox spacing="5.0">
               <children>
                  <Label text="Ultimo backup dia" />
                  <Label fx:id="ultimoBackupLabel" text="00/00/00" />
               </children>
            </HBox>
            <HBox spacing="5.0">
               <children>
                  <Label text="Próximo Backup automático dia" />
                  <Label fx:id="proximoBackupLabel" text="00/00/00" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
