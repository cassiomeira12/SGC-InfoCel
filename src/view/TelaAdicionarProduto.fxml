                           <children>
                              <ComboBox fx:id="categoriaComboBox" prefWidth="166.0" />
                              <Button focusTraversable="false" mnemonicParsing="false" onAction="#adicionarNovaCategoria" styleClass="button-add" />
                           </children>
                        </HBox>
                        <HBox fx:id="novaCategoriaBox" alignment="CENTER" spacing="5.0" visible="false" GridPane.columnIndex="5" GridPane.rowIndex="1">
                           <children>
                              <TextField fx:id="novaCategoriaText" />
                              <Button focusTraversable="false" mnemonicParsing="false" onAction="#salvarNovaCategoria" styleClass="button-confirmar" />
                           </children>
                        </HBox>
                        <HBox fx:id="marcaBox" alignment="CENTER" spacing="5.0" GridPane.columnSpan="2" GridPane.rowIndex="3">
                           <children>
                              <ComboBox fx:id="marcaComboBox" prefWidth="170.0" />
                              <Button focusTraversable="false" mnemonicParsing="false" onAction="#adicionarNovaMarca" styleClass="button-add" />
                           </children>
                        </HBox>
                        <HBox fx:id="novaMarcaBox" alignment="CENTER" spacing="5.0" GridPane.columnSpan="2" GridPane.rowIndex="3">
                           <children>
                              <TextField fx:id="novaMarcaText" prefWidth="170.0" />
                              <Button focusTraversable="false" mnemonicParsing="false" onAction="#salvarNovaMarca" styleClass="button-confirmar" />
                           </children>
                        </HBox>
                        <TextField fx:id="custoProdutoText" GridPane.columnIndex="2" GridPane.rowIndex="3" />
                        <TextField fx:id="valorProdutoText" GridPane.columnIndex="3" GridPane.rowIndex="3" />
