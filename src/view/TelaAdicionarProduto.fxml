                        <Label text="Quantidade" GridPane.columnIndex="2" GridPane.rowIndex="4" />
                        <Label fx:id="marcaLabel" text="Marca" GridPane.columnSpan="2" GridPane.rowIndex="2" />
                        <Label text="Unidade de Medida" GridPane.columnSpan="2" GridPane.rowIndex="4" />
                        <ComboBox fx:id="unidadeMedidaComboBox" prefWidth="200.0" GridPane.columnSpan="2" GridPane.rowIndex="5" />
                     </children>
                     <VBox.margin>
                        <Insets top="80.0" />
                     </VBox.margin>
                  </GridPane>
               </children></VBox>
         </center>
      </BorderPane>
