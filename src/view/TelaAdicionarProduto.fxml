                           <children>
                              <Label styleClass="label-titulo" text="Percentual de Lucro:">
                                 <font>
                                    <Font size="18.0" />
                                 </font>
                              </Label>
                              <Label fx:id="percentualLabel" styleClass="label-titulo" text="0.0%">
                                 <font>
                                    <Font size="20.0" />
                                 </font>
                              </Label>
                           </children>
                        </HBox>
                        <TextField fx:id="quantidadeText" GridPane.columnIndex="2" GridPane.rowIndex="5" />
