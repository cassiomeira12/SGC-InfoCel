<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<fx:root prefHeight="650.0" prefWidth="1200.0" type="AnchorPane" xmlns="http://javafx.com/javafx/9" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <BorderPane layoutX="270.0" layoutY="182.0" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
            <top>
                <Label text="Consultar Produtos" BorderPane.alignment="CENTER">
                    <font>
                        <Font size="27.0" />
                    </font>
                    <BorderPane.margin>
                        <Insets bottom="10.0" />
                    </BorderPane.margin>
                </Label>
            </top>
            <bottom>
                <HBox alignment="CENTER" prefWidth="1200.0" BorderPane.alignment="CENTER">
                    <children>
                        <HBox alignment="CENTER" prefWidth="600.0" spacing="150.0">
                            <children>
                                <Button fx:id="excluirButton" alignment="CENTER" focusTraversable="false" mnemonicParsing="false" prefHeight="44.0" prefWidth="96.0" text="Excluir">
                                    <HBox.margin>
                                        <Insets />
                                    </HBox.margin>
                                </Button>
                                <Button fx:id="editarButton" alignment="CENTER" focusTraversable="false" mnemonicParsing="false" prefHeight="44.0" prefWidth="96.0" text="Editar" />
                            </children>
                        </HBox>
                        <HBox alignment="CENTER" prefHeight="44.0" prefWidth="600.0">
                            <children>
                                <Button alignment="CENTER" focusTraversable="false" mnemonicParsing="false" prefHeight="44.0" prefWidth="96.0" text="Voltar" />
                            </children>
                            <HBox.margin>
                                <Insets />
                            </HBox.margin>
                        </HBox>
                    </children>
                    <BorderPane.margin>
                        <Insets top="10.0" />
                    </BorderPane.margin>
                </HBox>
            </bottom>
            <center>
                <VBox alignment="TOP_CENTER" spacing="20.0" BorderPane.alignment="CENTER">
                    <children>
                        <VBox>
                            <children>
                                <Label text="Pesquisar Produto" />
                                <TextField fx:id="pesquisaText" prefHeight="30.0" prefWidth="400.0" />
                            </children>
                        </VBox>
                        <TableView fx:id="produtosTable" prefHeight="450.0">
                            <columnResizePolicy>
                                <!-- falando sobre erro: https://netbeans.org/bugzilla/show_bug.cgi?id=256522-->
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                            </columnResizePolicy>
                            <columns>
                                <TableColumn prefWidth="75.0" text="C1" />
                                <TableColumn prefWidth="75.0" text="C2" />
                            </columns>
                            <VBox.margin>
                                <Insets />
                            </VBox.margin>
                        </TableView>
                                   
                    </children>
                </VBox>
            </center>
        </BorderPane>
    </children>
</fx:root>
