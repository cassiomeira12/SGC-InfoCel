<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<HBox spacing="20.0" stylesheets="@../css/default.css" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ProdutosConfiguracoes">
   <children>
      <VBox alignment="CENTER" prefHeight="423.0" prefWidth="401.0" spacing="10.0">
         <children>
            <Label text="Categoria de Produtos" />
            <TableView fx:id="categoriaTable">
               <columns>
                  <TableColumn fx:id="descricaoCategoriaColumn" prefWidth="75.0" text="Decrição" />
               </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
            <HBox alignment="CENTER" spacing="35.0">
               <children>
                  <Button mnemonicParsing="false" styleClass="button-add" text="Adicionar" />
                  <Button fx:id="removerCategoriaButton" mnemonicParsing="false" onAction="#removerCategoria" styleClass="button-deletar" text="Remover" />
               </children>
            </HBox>
         </children>
      </VBox>
      <VBox alignment="CENTER" layoutX="10.0" layoutY="10.0" prefHeight="423.0" prefWidth="401.0" spacing="10.0">
         <children>
            <Label text="Marca de Produtos" />
            <TableView fx:id="marcaTable">
               <columns>
                  <TableColumn fx:id="descricaoMarcaColumn" prefWidth="75.0" text="Decrição" />
               </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
            <HBox alignment="CENTER" spacing="35.0">
               <children>
                  <Button mnemonicParsing="false" styleClass="button-add" text="Adicionar" />
                  <Button fx:id="removerMarcaButton" mnemonicParsing="false" onAction="#removerMarca" styleClass="button-deletar" text="Remover" />
               </children>
            </HBox>
         </children>
      </VBox>
      <VBox alignment="CENTER" layoutX="411.0" layoutY="10.0" prefHeight="423.0" prefWidth="401.0" spacing="10.0">
         <children>
            <Label text="Unidades de Medida" />
            <TableView fx:id="unidadesTable">
               <columns>
                  <TableColumn fx:id="abreviaturaUnidadeColumn" maxWidth="100.0" minWidth="100.0" prefWidth="100.0" text="Abreviação" />
                  <TableColumn fx:id="descricaoUnidadeColumn" prefWidth="75.0" text="Decrição" />
               </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
            <HBox alignment="CENTER" spacing="35.0">
               <children>
                  <Button mnemonicParsing="false" styleClass="button-add" text="Adicionar" />
                  <Button fx:id="removerUnidadeButton" mnemonicParsing="false" onAction="#removerUnidade" styleClass="button-deletar" text="Remover" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
   <padding>
      <Insets top="20.0" />
   </padding>
</HBox>
