<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane fx:id="painelPrincipal" prefHeight="680.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.PainelController">
   <top>
      <MenuBar fx:id="barraMenu" prefHeight="30.0" BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="Arquivo">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#sair" text="Sair" />
                  <MenuItem mnemonicParsing="false" onAction="#fecharPrograma" text="Fechar" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Produtos">
               <items>
                  <MenuItem mnemonicParsing="false" onAction="#chamarTelaAdicionarProduto" text="Adicionar Produto" />
                  <MenuItem mnemonicParsing="false" onAction="#chamarTelaConsultarProdutos" text="Consultar Produtos" />
               </items></Menu>
          <Menu mnemonicParsing="false" text="Vendas">
               <items>
                  <MenuItem mnemonicParsing="false" onAction="#chamarTelaAdicionarVenda" text="Adicionar Venda" />
                  <MenuItem mnemonicParsing="false" onAction="#chamarTelaConsultarVendas" text="Consultar Vendas" />
               </items></Menu>
            <Menu mnemonicParsing="false" text="Manutenções">
               <items>
                  <MenuItem mnemonicParsing="false" onAction="#chamarTelaAdicionarManutencao" text="Adicionar Manutenção" />
                  <MenuItem mnemonicParsing="false" onAction="#chamarTelaConsultarManutencoes" text="Consultar Manutenções" />
               </items></Menu>
            <Menu mnemonicParsing="false" text="Receitas">
               <items>
                  <MenuItem mnemonicParsing="false" onAction="#chamarTelaAdicionarReceita" text="Adicionar Receita" />
                  <MenuItem mnemonicParsing="false" onAction="#chamarTelaConsultarReceita" text="Consultar Receitas" />
               </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Saídas">
               <items>
                  <MenuItem mnemonicParsing="false" onAction="#chamarTelaAdicionarSaida" text="Adicionar Saída" />
                  <MenuItem mnemonicParsing="false" onAction="#chamarTelaConsultarSaida" text="Consultar Saídas" />
               </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Clientes">
               <items>
                  <MenuItem mnemonicParsing="false" onAction="#chamarTelaConsultarClientes" text="Consultar Clientes" />
               </items></Menu>
            <Menu mnemonicParsing="false" text="Relatórios">
               <items>
                  <MenuItem mnemonicParsing="false" onAction="#chamarTelaRelatorioDiario" text="Relatório Diário" />
                  <MenuItem mnemonicParsing="false" onAction="#chamarTelaRelatorioMensal" text="Relatório Mensal" />
               </items></Menu>
            <Menu mnemonicParsing="false" text="Opções">
               <items>
                  <MenuItem mnemonicParsing="false" onAction="#chamarTelaConfiguracoes" text="Configurações" />
               </items>
            </Menu>
            <Menu disable="true" mnemonicParsing="false" text="Ajuda">
               <items>
                  <MenuItem mnemonicParsing="false" onAction="#chamarTelaSobre" text="Sobre" />
               </items></Menu>
        </menus>
      </MenuBar>
   </top>
</BorderPane>
